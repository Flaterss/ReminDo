<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Atur warna primer dan warna aksen -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cyan</item>
        <!-- Atur jenis font, ukuran font, dll -->
        <item name="android:textSize">16sp</item>
        <!-- Atur gambar latar belakang, animasi, dll -->
        <!-- Atur gaya Action Bar, Toolbar -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <!-- Dan pengaturan lainnya sesuai kebutuhan aplikasi Anda -->
    </style>

    <!-- Contoh definisi gaya untuk TextView -->
    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <!-- Dan pengaturan lainnya sesuai kebutuhan -->
    </style>

    <style name="BlueTextAppearance">
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackTextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>